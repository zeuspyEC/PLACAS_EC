# ==========================================
# ECPlacas 2.0 - Configuración Flake8
# Proyecto: Construcción de Software - EPN
# Desarrollado por: Erick Costa
# Enfoque: Rendimiento | Sostenibilidad | Escalabilidad
# ==========================================

[flake8]

# ==========================================
# CONFIGURACIÓN BÁSICA
# ==========================================
max-line-length = 88
max-doc-length = 88

# ==========================================
# DIRECTORIOS Y ARCHIVOS
# ==========================================
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    htmlcov,
    .coverage,
    build,
    dist,
    *.egg-info,
    venv,
    env,
    .venv,
    .env,
    node_modules,
    migrations,
    .tox

# ==========================================
# CÓDIGOS DE ERROR
# ==========================================
# E203: Whitespace before ':' (conflicto con Black)
# E501: Line too long (manejado por Black)
# W503: Line break before binary operator (estilo preferido)
# W504: Line break after binary operator
# F401: Module imported but unused (en __init__.py está OK)
extend-ignore = E203,E501,W503,W504

# Códigos que SÍ queremos verificar
select = E,W,F,C,B,I,D,S,N,T

# ==========================================
# CONFIGURACIÓN DE COMPLEJIDAD
# ==========================================
max-complexity = 12

# ==========================================
# CONFIGURACIÓN IMPORT-ORDER
# ==========================================
import-order-style = google
application-import-names = backend,scripts,ecplacas

# ==========================================
# CONFIGURACIÓN DE NAMING
# ==========================================
classname = ^[A-Z][a-zA-Z0-9]*$
constantname = ^[A-Z_][A-Z0-9_]*$
functionname = ^[a-z_][a-z0-9_]*$
methodname = ^[a-z_][a-z0-9_]*$
variablename = ^[a-z_][a-z0-9_]*$

# ==========================================
# CONFIGURACIÓN AVANZADA
# ==========================================
hang-closing = false
aggressive = 1
jobs = auto
count = true
statistics = true
benchmark = true
format = %(path)s:%(row)d:%(col)d: %(code)s %(text)s
show-source = true
verbose = 1
output-file = flake8-report.txt
tee = true