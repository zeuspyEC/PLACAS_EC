# ==========================================
# ECPlacas 2.0 - Variables de Entorno
# Proyecto: Construcción de Software
# Desarrollado por: Erick Costa
# Temática: Futurista - Azul Neon
# ==========================================

# IMPORTANTE: Copie este archivo como .env y modifique los valores según sus necesidades
# cp .env.example .env

# ==========================================
# CONFIGURACIÓN DEL SERVIDOR
# ==========================================

# Entorno de ejecución (development/production)
FLASK_ENV=development

# Host y puerto del servidor
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Modo debug (true/false) - NUNCA true en producción
FLASK_DEBUG=False

# ==========================================
# SEGURIDAD
# ==========================================

# Clave secreta para Flask - CAMBIAR EN PRODUCCIÓN
SECRET_KEY=ecplacas_2024_change_in_production

# Clave secreta para JWT - CAMBIAR EN PRODUCCIÓN
JWT_SECRET_KEY=jwt_secret_change_in_production

# Rate limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_HOUR=50

# Seguridad de login
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# ==========================================
# BASE DE DATOS
# ==========================================

# Ruta de la base de datos SQLite
DATABASE_PATH=database/ecplacas.sqlite

# Ruta de backups
DATABASE_BACKUP_PATH=database/backups/

# ==========================================
# APIs EXTERNAS
# ==========================================

# Configuración API ANT Ecuador
ANT_API_BASE_URL=https://servicios.axiscloud.ec/CRV/paginas
ANT_API_EMPRESA=02
ANT_API_TIMEOUT=30
ANT_API_MAX_RETRIES=3
ANT_API_RATE_LIMIT=1.0

# ==========================================
# CACHE
# ==========================================

# Habilitar cache del sistema
CACHE_ENABLED=True

# Tiempo de vida del cache en horas
CACHE_TTL_HOURS=24

# Máximo número de entradas en cache
CACHE_MAX_ENTRIES=1000

# ==========================================
# LOGGING
# ==========================================

# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Archivo de logs
LOG_FILE=logs/ecplacas.log

# Tamaño máximo del archivo de log
LOG_MAX_SIZE=10MB

# Número de archivos de backup
LOG_BACKUP_COUNT=5

# ==========================================
# NOTIFICACIONES - EMAIL
# ==========================================

# Habilitar notificaciones por email
EMAIL_ENABLED=False

# Configuración SMTP
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USE_TLS=True

# Credenciales de email (CAMBIAR POR LAS SUYAS)
EMAIL_USERNAME=
EMAIL_PASSWORD=

# Email del remitente
EMAIL_FROM_NAME=ECPlacas 2.0
EMAIL_FROM_ADDRESS=noreply@ecplacas.local

# ==========================================
# NOTIFICACIONES - SMS
# ==========================================

# Habilitar notificaciones por SMS
SMS_ENABLED=False

# API de SMS (ejemplo: Twilio, Nexmo, etc.)
SMS_API_KEY=
SMS_API_SECRET=
SMS_FROM_NUMBER=

# ==========================================
# NOTIFICACIONES - WHATSAPP
# ==========================================

# Habilitar notificaciones por WhatsApp Business
WHATSAPP_ENABLED=False

# Token de WhatsApp Business API
WHATSAPP_API_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

# ==========================================
# MANTENIMIENTO
# ==========================================

# Backup automático
BACKUP_ENABLED=True
BACKUP_FREQUENCY_HOURS=24

# Limpieza automática
CLEANUP_LOGS_DAYS=30
CLEANUP_CACHE_DAYS=7
CLEANUP_SESSIONS_HOURS=2

# ==========================================
# DESARROLLO Y DEBUG
# ==========================================

# Modo de desarrollo avanzado
DEBUG_MODE=False

# Habilitar métricas de performance
METRICS_ENABLED=True

# Habilitar profiling (solo desarrollo)
PROFILING_ENABLED=False

# Usar respuestas mock para APIs (testing)
MOCK_API_RESPONSES=False

# ==========================================
# CONFIGURACIÓN AVANZADA
# ==========================================

# Timezone
TZ=America/Guayaquil

# Idioma por defecto
DEFAULT_LANGUAGE=es

# Formato de fecha
DATE_FORMAT=%d-%m-%Y
DATETIME_FORMAT=%d-%m-%Y %H:%M:%S

# Configuración de uploads
MAX_UPLOAD_SIZE=16MB
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,gif

# ==========================================
# DOCKER Y DEPLOYMENT
# ==========================================

# Variables para Docker (opcional)
DOCKER_ENV=False
CONTAINER_NAME=ecplacas-2.0

# Workers para Gunicorn (producción)
WEB_CONCURRENCY=4
WORKER_TIMEOUT=120

# ==========================================
# MONITOREO Y MÉTRICAS
# ==========================================

# Habilitar monitoreo del sistema
MONITORING_ENABLED=True

# Intervalo de métricas en segundos
METRICS_INTERVAL=60

# Retención de métricas en días
METRICS_RETENTION_DAYS=30

# ==========================================
# INTEGRACIÓN CON SERVICIOS EXTERNOS
# ==========================================

# Google Analytics (opcional)
GOOGLE_ANALYTICS_ID=

# Sentry para error tracking (opcional)
SENTRY_DSN=

# ==========================================
# CONFIGURACIÓN DE CERTIFICADOS SSL
# ==========================================

# Rutas de certificados SSL (opcional)
SSL_CERT_PATH=
SSL_KEY_PATH=
SSL_ENABLED=False

# ==========================================
# CONFIGURACIÓN DE PROXY Y CDN
# ==========================================

# Configuración de proxy reverso
PROXY_COUNT=1
TRUSTED_PROXIES=127.0.0.1

# CDN para assets estáticos (opcional)
CDN_BASE_URL=

# ==========================================
# NOTAS IMPORTANTES
# ==========================================

# 1. NUNCA subir el archivo .env al control de versiones
# 2. En producción, cambiar todas las claves secretas
# 3. Usar HTTPS en producción
# 4. Configurar firewall apropiadamente
# 5. Hacer backups regulares de la base de datos
# 6. Monitorear logs de seguridad
# 7. Mantener las dependencias actualizadas

# ==========================================
# EJEMPLOS DE CONFIGURACIÓN POR ENTORNO
# ==========================================

# DESARROLLO LOCAL:
# FLASK_ENV=development
# FLASK_DEBUG=True
# LOG_LEVEL=DEBUG
# CACHE_ENABLED=False

# TESTING:
# FLASK_ENV=testing
# DATABASE_PATH=database/test_ecplacas.sqlite
# MOCK_API_RESPONSES=True

# PRODUCCIÓN:
# FLASK_ENV=production
# FLASK_DEBUG=False
# SSL_ENABLED=True
# BACKUP_ENABLED=True
# MONITORING_ENABLED=True

