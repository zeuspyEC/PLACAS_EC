# ==========================================
# ECPlacas 2.0 - Variables de Entorno
# Proyecto: Construcción de Software - EPN
# Desarrollado por: Erick Costa
# ==========================================

# ==========================================
# CONFIGURACIÓN DE APLICACIÓN
# ==========================================
FLASK_ENV=development
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=True

# Clave secreta (cambiar en producción)
SECRET_KEY=ecplacas_2024_sri_completo_secret_key_change_in_production

# ==========================================
# BASE DE DATOS
# ==========================================
DATABASE_PATH=backend/database/ecplacas.sqlite
DATABASE_BACKUP_PATH=backend/database/backups
DATABASE_POOL_SIZE=5
DATABASE_POOL_TIMEOUT=30

# ==========================================
# APIs SRI ECUADOR
# ==========================================
SRI_BASE_URL=https://declaraciones.sri.gob.ec
SRI_TIMEOUT=30
SRI_RATE_LIMIT=10
SRI_CACHE_TIMEOUT=300

# ==========================================
# CACHE Y PERFORMANCE
# ==========================================
CACHE_ENABLED=true
CACHE_TYPE=simple
CACHE_TIMEOUT=300
REDIS_URL=redis://localhost:6379/0

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=DEBUG
LOG_FILE=backend/logs/app/ecplacas.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ==========================================
# SEGURIDAD
# ==========================================
CORS_ORIGINS=*
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100 per hour
SSL_ENABLED=false

# ==========================================
# MONITOREO Y MÉTRICAS
# ==========================================
MONITORING_ENABLED=true
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# ==========================================
# DOCKER Y DESPLIEGUE
# ==========================================
BUILD_DATE=2025-06-21T10:30:00Z
VERSION=2.0.1
VCS_REF=main

# Workers para Gunicorn
WORKERS=4
TIMEOUT=30
KEEPALIVE=5
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# ==========================================
# DESARROLLO Y TESTING
# ==========================================
TESTING=false
MOCK_API_RESPONSES=false
TEST_DATABASE_PATH=:memory:

# ==========================================
# CONFIGURACIÓN POR ENTORNO
# ==========================================

# DESARROLLO:
# FLASK_DEBUG=True
# LOG_LEVEL=DEBUG
# CACHE_ENABLED=False

# TESTING:
# FLASK_ENV=testing
# DATABASE_PATH=:memory:
# MOCK_API_RESPONSES=True

# PRODUCCIÓN:
# FLASK_ENV=production
# FLASK_DEBUG=False
# SSL_ENABLED=True
# SECRET_KEY=your_secure_secret_key_here

# ==========================================
# INFORMACIÓN DEL PROYECTO
# ==========================================
PROJECT_NAME=ECPlacas 2.0
PROJECT_DESCRIPTION=Sistema de Consulta Vehicular
PROJECT_AUTHOR=Erick Costa
PROJECT_UNIVERSITY=Escuela Politécnica Nacional
PROJECT_SUBJECT=Construcción de Software
PROJECT_VERSION=2.0.1